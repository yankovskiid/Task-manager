.container
  h1 Tasks#index
  ol.sortable#tasks
    - if @tasks.present?
      - @tasks.each do |task|
        = render task
          /f.check_box(:status)
    - else
      h1 Tasks not found
  hr
  = simple_form_for(Task.new, remote: true) do |f|
    = f.input :name
    = f.button :submit, class: "btn-primary"
